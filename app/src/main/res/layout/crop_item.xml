<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cropCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/textViewCropName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ফসলের নাম:-"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="বাজার মূল্য:- ₹0" />

    <TextView
        android:id="@+id/textViewDemand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="চাহিদা:- 0" />

    <TextView
        android:id="@+id/textViewSupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="জোগান:- 0" />

    <!-- 🔽 Extra Details Section (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutExtraDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="বিস্তারিত:- " />

        <TextView
            android:id="@+id/textViewFertilizerRecommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সার পরামর্শ:- " />
        <TextView
            android:id="@+id/textViewSoilType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মাটির ধরন:- " />

        <TextView
            android:id="@+id/textViewCultivationMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="চাষের পদ্ধতি:- " />
        <TextView
            android:id="@+id/textViewWaterNeeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সেচের প্রয়োজন:- " />

        <TextView
            android:id="@+id/textViewHarvestTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ফসল কাটার সময়:- " />
        <TextView
            android:id="@+id/textViewRiskNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সতর্কতা:- " />


        <!-- Add more details if needed -->
    </LinearLayout>

</LinearLayout>
