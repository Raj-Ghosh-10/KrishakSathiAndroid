<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cropCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#FAF3E0"
    android:elevation="4dp"> <!-- Soft cream background -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Crop Name (Accessible Text) -->
        <TextView
            android:id="@+id/cropName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Name"
            android:textColor="#2E7D32"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Market Rate -->
        <TextView
            android:id="@+id/MarketRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0 per quintal"
            android:textColor="#6D4C41" />

        <!-- Demand and Supply -->
        <TextView
            android:id="@+id/demandSupply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demand: 0, Supply: 0"
            android:textColor="#455A64" />

        <!-- Details Layout (Hidden Initially) -->
        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Yield -->
            <TextView
                android:id="@+id/yieldRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yield: 0 t/ha"
                android:textColor="#4E342E" />

            <!-- Temperature Range -->
            <TextView
                android:id="@+id/tempRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp: 0°C - 0°C"
                android:textColor="#0277BD" />

            <!-- Soil Type -->
            <TextView
                android:id="@+id/soilType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil: Loamy"
                android:textColor="#8D6E63" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
